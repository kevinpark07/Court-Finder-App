<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
            <%= error %>
    <% end%>
<% end %>

<%= form_for @player do |f| %>
        
        <%= f.label  :username %>
        <%= f.text_field  :username %>
        
        <%= f.label  :password %>
        <%= f.password_field  :password %>
        
        <%= f.label  :name %>
        <%= f.text_field  :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>
        
        <%= f.label  :age %>
        <%= f.number_field  :age, step: :any %>

        <%= f.label  :level%>
        <%= f.select :level, ["1.0", "2.0", "2.5", "3.0", "3.5", "4.0", "4.5", "5.0"] %>
        
        <%= f.label  :address %>
        <%= f.text_field  :address %>
        
        <%= f.label  :profile_picture %>
        <%= f.text_field :profile_picture %>

        <%= f.submit "Create Pofile" %>

<% end %>