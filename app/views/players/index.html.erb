<div class="md:px-32 py-8 w-full">
  <div class="shadow overflow-hidden rounded border-b border-gray-200 bg-orange-200">
    <div class="mt-2">
       <div class="pt-2 relative mx-auto ml-2 text-gray-600 mb-4 inline float-left">
            <form action="/players" class="incline">
                <div class="inline-block relative w-48">
                  
                    <select id = "player_level" name="player_level" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline inline mb-2 text-sm">
                        <option value="">Find Players By Level:</option>
                        <option value="1.0">1.0</option>
                        <option value="2.0">2.0</option>
                        <option value="2.5">2.5</option>
                        <option value="3.0">3.0</option>
                        <option value="3.5">3.5</option>
                        <option value="4.0">4.0</option>
                        <option value="4.5">4.5</option>
                        <option value="5.0">5.0</option>
                    </select>
                <label>  
                  <input type='submit' value="Submit", class=" ml-2 text-white bg-orange-500 border-0 py-2 px-4 focus:outline-none hover:bg-orange-600 rounded inline-block float-right rounded mb-2" >  
                </label>
              </div>
          </form>
      </div>
    </div>
        
    <div class="pt-2 relative mx-auto ml-2 text-gray-600 mb-4 inline float-left" >
      <form action="/players" class="inline float-left" >
          <div class="inline-block relative w-48">
            
                <select id = "distance" name="distance" class="block appearance-none w-/ bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline inline mb-2 text-sm">
                    <option value="">Find Players by Distance:</option>
                    <option value="1 Mile">1 Mile</option>
                    <option value="2 Miles">2 Miles</option>
                    <option value="3 Miles">3 Miles</option>
                </select>
                <label>
                  <input type='submit' value="Submit" class=" ml-2 text-white bg-orange-500 border-0 py-2 px-4 focus:outline-none hover:bg-orange-600 rounded inline-block float-right rounded mb-2" >
                </label>
          </div>
      </form>
    </div>

  </div>
    <table class="min-w-full bg-white">
      <thead class="bg-orange-500 text-white">
        <tr>
          <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Name</th>
        </tr>
      </thead>
    <tbody class="text-gray-700">
    <% @players.each do |player| %>
      <tr>
        <td class="w-1/3 text-left py-3 px-4"><%=link_to player.name, player_path(player) %></td>
      </tr>
      <% end%>
    </tbody>
    </table>
</div>