<%= @player.username %><br>
<%= @player.name %><br>
<%= @player.age %><br>
<%= @player.level %><br>
<img src="<%= @player.profile_picture %>" alt="<% @player.profile_picture%>" class="show-img">

<% @player.reservations.each do |reservation| %>
    <p>Park: <%= reservation.court.name %></p>  
    <p>Address: <%= reservation.court.location %></p> 
    <p>Scheduled: <%= reservation.date %></p> 
    <p><%= button_to "Delete Reservation", reservation_path(reservation), method: "delete" %></p>
    <%= button_to "Edit Reservation", edit_reservation_path(reservation), method: "get" %>
<% end %>
<br>
<% @player.reviews.each do |review| %>
    <p>Court: <%= review.court.name %></p>  
    <p>Rating: <%= review.rating %></p> 
    <p>Review: <%= review.review %></p> 
    <%= button_to "Edit Review", edit_review_path(review), method: "get" %>
<% end %>


