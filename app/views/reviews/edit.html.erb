<h1 class="text-3xl font-bold flex justify-center text-orange-500 mb-2">Review a Court</h1>
      <div class="w-auto text-center">
          <%= semantic_form_for @review do |f| %>
          <%= f.inputs do  %>
          <%= f.input :court_id, :as => :hidden, :input_html => { :value => @court.id } %>
        <%= f.input :player_id, :as => :hidden, :input_html => { :value => @current_player.id } %>
          <%# f.input :court_id, :as => :select, :required => false, :label => "Court ", :collection => { @court.name => @court.id }, :input_html => { :class => "shadow-md border w-4/12 h-10 px-3 py-2 text-orange-500 focus:outline-none focus:border-orange-500 mb-3 rounded" } %>
          <%# f.input :player_id, :as => :select, :required => false, :label => "Player ", :collection => { @current_player.name => @current_player.id }, :input_html => { :class => "shadow-md border w-4/12 h-10 px-3 py-2 text-orange-500 focus:outline-none focus:border-orange-500 mb-3 rounded" } %>
          <%= f.input :rating, :as => :select, :label => "Rating ", :collection => ["1", "2", "3", "4", "5" ], :input_html => { :class => "shadow-md border w-auto h-10 px-3 py-2 text-orange-500 focus:outline-none focus:border-orange-500 mb-3 rounded" } %>
          <%= f.input :review, :label => false, :as => :text, :placeholder => "Write Review Here", :input_html => { :class => "shadow-md border w-5/12 h-24 px-3 py-2 text-orange-500 focus:outline-none focus:border-orange-500 mb-3 rounded" }%>
          <% end %>
          <%= f.action :submit, :button_html => { :class => "bg-orange-500 hover:bg-orange-600 text-white px-3 py-1 rounded text-lg focus:outline-none shadow btn btn-danger"}, :wrapper_html => { :style => 'list-style-type:none;' }  %>
          <% end %>
        </div>