<!DOCTYPE html>
<html>
  <head>
    <title>Mod2RailsProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
<nav class="bg-white shadow  sticky top-0 text-md" role="navigation">
  <div class="container mx-auto p-4 flex flex-wrap items-center md:flex-no-wrap">
    <div class="mr-4 md:mr-8">

<%= link_to '/' do %>
    <%= image_tag 'undraw_grand_slam_0q5r.svg', class:"w-20 h-20" %>
<% end%>
      
    </div>
    <div class="ml-auto md:hidden">
      <button class="flex items-center px-3 py-2 border rounded" type="button">
        <svg class="h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <title class="font-roboto">Menu</title>
          <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/>
        </svg>
      </button>
    </div>
    <div class="w-full md:w-auto md:flex-grow md:flex md:items-center">
      <ul class="flex flex-col mt-4 -mx-4 pt-4 border-t md:flex-row md:items-center md:mx-0 md:mt-0 md:pt-0 md:mr-4 lg:mr-8 md:border-0">
        <li>
        <%= link_to 'Courts', courts_path, class:"block px-4 py-1 md:p-2 lg:px-4 text-xl" %>
        </li>
        
        <li>
          <%= link_to 'Players', players_path, class:"block px-4 py-1 md:p-2 lg:px-4 text-xl text-orange-500" %>
        </li>
        <li>
          <%= link_to 'Reserve-A-Court', reserve_path, class:"block px-4 py-1 md:p-2 lg:px-4 text-xl" %>
        </li>
      </ul>
      <ul class="flex flex-col mt-4 -mx-4 pt-4 border-t md:flex-row md:items-center md:mx-0 md:ml-auto md:mt-0 md:pt-0 md:border-0">
    
        
            <% if session[:player_id] %>
            <li>
                <%= link_to 'Logout', logout_path(session[:player_id]), method: :delete, class:"block px-4 py-1 md:p-2 lg:px-4 text-orange-500 text-xl" %>
            </li>
            
            <li>
                <%= link_to 'Profile', profile_path(session[:player_id]), class:"block px-4 py-1 md:p-2 lg:px-4 text-orange-500 text-xl" %>
            </li>

            <li>
            <% else %>
                <%= link_to 'Login', login_path, class:"block px-4 py-1 md:p-2 lg:px-4 text-orange-500 text-xl" %>
            </li>

            <li>
                <%= link_to 'Sign Up', new_player_path, class:"block px-4 py-1 md:p-2 lg:px-4 text-orange-500 text-xl" %>
            </li>
            <% end %>
        
       
      </ul>
    </div>
  </div>
</nav>

    <%= yield %>
  </body>
</html>
