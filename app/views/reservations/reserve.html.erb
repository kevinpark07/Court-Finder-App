<%= semantic_form_for @reservation do |f| %>
<%= f.inputs do %>
<%= f.input :court_id, :as => :select, :collection => Hash[Court.all.map{|c| [c.name,c.id]}], :label => "Court"  %>
<%= f.input :player_id, :as => :select, :collection => { @current_player.name => @current_player.id }, :label => "Player" %>
<%= f.input :date, :as => :datetime_select, :label => "Date & Time" %>
<% end %>
<%= f.action :submit, :method => :post %>
<% end %>

